{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.exe",  // Путь к вашему исполнимому файлу
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // Если хотите использовать внешний терминал, установите true
            "MIMode": "gdb",  // Устанавливаем использование GDB для отладки
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:/msys64/ucrt64/bin",  // Укажите путь к gdb, если он отличается
            "preLaunchTask": "build"  // Название задачи сборки, если она настроена
        }
    ]
}
